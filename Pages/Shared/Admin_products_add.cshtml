@page
@model WEB.Pages.Admin.CreateModel

<h1>Create New Product</h1>

<form method="post">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="Product.Name_of_product" required>
    </div>
    <div class="form-group">
        <label for="photo">Photo:</label>
        <input type="text" class="form-control" id="photo" name="Product.Photo_product">
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" step="0.01" class="form-control" id="price" name="Product.Price" required>
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="Product.Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
